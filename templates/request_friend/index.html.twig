{% extends 'base.html.twig' %}

{% block title %}Hello RequestFriendController!{% endblock %}

{% block body %}

    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
    {% for request in allRequest %}
        <div class='card m-2' style='width: 18rem;'>
{#                    <img src='#' class='card-img-top' alt=' '>#}
            <div class='card-body'>
                <h5 class='card-title'> {{ request.firstName }} {{ request.LastName }}</h5>

                <a href='{{ path('wall', {'id': request.id}) }}' class='btn btn-primary'>View the profile</a>

            </div>
            <div class='card-body'>
                <a href='{{ path('acceptrequest', {'requestId': request.requestId })  }}' class='btn btn-success'>Accept </a>
                <a href='' class='btn btn-danger'>Decline </a>
            </div>
        </div>

    {% endfor %}
    </div>
{% endblock %}
