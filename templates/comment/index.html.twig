{% extends 'base.html.twig' %}

{% block title %}Hello CommentController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
<div>
    <div >
        <div class="m-3">
            <a href='{{ path('wall', {'id': wallId}) }}' class='btn btn-sm border btn-primary'>Go to the wall</a>
        </div>
        <div class="bg-light m-3 p-3">
            <div class="text-center">
                <h5 >{{ postMessage }}</h5>
            </div>
            <div class="d-flex">
                <p class='ml-auto w-25 p-0'>
                        created by {{ creatorLastName }} {{ creatorFirstName }}
                </p>
            </div>
        </div>
        {%   for comment in comments %}

{#        <div class='card-body' >#}
{#            <div class='card-header'>#}
            <div class="d-flex bg-light ">
                <div class="">
                    By: {{ comment.firstName}} {{ comment.lastName}}
                </div>
            <div class="">
                <h5 class='text-center'> {{ comment.message }}</h5>
            </div>

            </div>
        </div>
        {% endfor %}

        <div class='card-body w-50 h-50 ml-auto mr-auto'>
            <form method='post' action='{{ path('doComment', {  'targetId': targetId, 'postId': id}) }}'>
            <div class='card'>
                <label for='exampleFormControlTextarea1'>What's on your mind?</label>
                <textarea class='form-control' id='exampleFormControlTextarea1' name='message' rows='1'></textarea>
                <label for='exampleFormControlFile1'></label>
                <button type='submit' class='btn btn-primary mb-2 w-25 h-25 ml-auto mr-auto'>Add Comment</button>
            </div>
            </form></div>
    </div>
{% endblock %}
